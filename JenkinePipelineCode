
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
            #use Pipeline Syntax to create
            checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/YourRepo.git']]])            

          }
        }
         stage ("terraform init") {
            steps {
                sh ('terraform init') 
            }
        }
         stage ("terraform plan") {
            steps {
                sh ('terraform plan') 
            }
        }
        
 
      
    }
}
